    function loadGaugeCPU() {
        var myChartCUP = echarts.init(document.getElementById('mainb'), infographicTheme());
        optionCUP = {
            series: [
                {
                    name: '业务指标',
                    type: 'gauge',
                    splitNumber: 10,       // 分割段数，默认为5
                    axisLine: {            // 坐标轴线
                        lineStyle: {       // 属性lineStyle控制线条样式
                            color: [[0.2, '#228b22'], [0.8, '#48b'], [1, '#ff4500']],
                            width: 10
                        }
