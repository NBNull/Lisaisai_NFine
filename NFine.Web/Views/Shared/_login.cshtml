<script>
    $(function () {

        // 回车键
        document.onkeydown = function (e) {
            e = e || window.event;
            if ((e.keyCode || e.which) == 13) {
                $('#btnLogin').trigger('click');
            }
        }

        // 点击切换验证码
        $("#lr_verifycode_img").bind("click", function () {
            $("#lr_verifycode_input").val('');
            $("#lr_verifycode_img").attr("src", "http://localhost:1851/api/weblogin/getauthcode?time=" + Math.random());
        });

        $("#btnLogin").bind("click", function () {
            fnLogin();
        });

    });

    function fnLogin() {
        var txtusername = $("#txtUsername").val();
        var txtpassword = $("#txtPassword").val();
        $.ajax({
            type: "post",
            url: "http://localhost:1851/api/weblogin/checklogin",
            contentType: 'application/json',
            data: JSON.stringify({ username: txtusername, password: txtpassword, verifycode: "" }),
            success: function (data) {
                if (data.State == "success") {
                    $(".errormsg").text("");
                    var jsonLoginUser = JSON.stringify(data.LoginUser);
                    $.cookie("SessionKey", data.SessionKey);
                    $.cookie("LoginUser", jsonLoginUser);
                    var loginUser = $.cookie("LoginUser");
                    var str = eval('(' + loginUser + ')');
                    location.reload();
                }
                else {
                    $(".errormsg").text(data.Message);
                }
            }
        });
    }

</script>

